<GerenciadorDeTelas>:
    Screen_Login:
    Screen_Registre:

#Tela de Login
<Screen_Login>:
    name: 'Screen_Login'

    FloatLayout:
        
        Label:
            text: 'Login'
            size_hint: None, None
            size_hint: 0.5,0.0004
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
    
            
        # Usuario..............................................
        Label:
            text:'Usuario:'
            size_hint: None, None
            size_hint: 0.5,0.005
            pos_hint: {"center_x": 0.33, "center_y": 0.7}
        #aviso de usuario
        Label:
            id: aviso_user
            color: 'red'
            size_hint: None, None
            size_hint: 0.5,0.005
            pos_hint: {'center_x': 0.6, 'center_y': 0.7}
        TextInput:
            id: user
            size_hint: None, None
            size_hint: 0.5,0.05
            pos_hint: {"center_x": 0.5, "center_y": 0.65}
            hint_text: 'Usuario'

        # Senha................................................
        Label:
            text:'Senha:'
            size_hint: None, None
            size_hint: 0.5,0.005
            pos_hint: {"center_x": 0.32, "center_y": 0.58}
        #aviso de senha
        Label:
            id: aviso_senha
            color: 'red'
            size_hint: None, None
            size_hint: 0.5,0.005
            pos_hint: {'center_x': 0.6, 'center_y': 0.58}
        TextInput:
            id: password
            size_hint: None, None
            size_hint: 0.5,0.05
            pos_hint: {"center_x": 0.5, "center_y": 0.53}
            hint_text: 'Senha'

        # Entrar
        Button:
            id: bt_enter
            text: 'Entrar'
            color: 'black'
            background_color: 'green'
            size_hint: None, None
            size_hint: 0.3,0.05
            pos_hint: {"center_x": 0.5, "center_y": 0.43}
            on_press: root.bt_enter()

        # Cadastrar
        Button:
            id: registrar
            text: 'Criar'
            color: 'black'
            background_color: 'yellow'
            size_hint: None, None
            size_hint: 0.2,0.03
            pos_hint: {"center_x": 0.5, "center_y": 0.37}
            on_press: root.bt_registrar()


