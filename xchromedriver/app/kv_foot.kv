<Menu_bot>:
    name: 'Menu_bot'
    Image:
        source:'xchromedriver/app/imagens/back_bot-1.jpg'
        allow_stretch: True
        keep_ratio: False
    #imagem de fundo do testo 'Menu Roletas'
    Image:
        source: ''
        allow_stretch: True
        keep_ratio: False
        pos: '283','505'
        size_hint: 0.3,0.06
        opacity: 0.7
    Label:
        text:'Menu Roletas'
        color: 'blue'
        font_size: '35'
        size_hint: None,None
        size_hint: 0.5,0.5
        pos_hint: {'center_x': 0.5, 'center_y': 0.95}

    FloatLayout:
        id: fundo_bot
        #button config
        Button:
            text: ''
            pos: '690', '450'
            background_normal: 'xchromedriver/app/imagens/config.png'
            background_down: 'xchromedriver/app/imagens/config_dawn.png'
            size_hint: None, None
            size: 130, 130
            on_release: root.config()
        
        # FloatLayout Config
        FloatLayout:
            id: config
            size_hint: 0.2, 0.5  # Define um tamanho relativo
            pos_hint: {"center_x": 0.85, "center_y": 0.62}  # Centraliza o layout na tela
            canvas.before:
                Color:
                    rgba: 155, 155, 155, 0.7  # Define a cor de fundo (vermelho neste caso)
                Rectangle:
                    size: self.size  # Define o tamanho do retângulo como o tamanho do FloatLayout
                    pos: self.pos  # Define a posição do retângulo como a posição do FloatLayout   
            
            Button:
                text: 'Sair da Conta'
                size_hint: None,None
                size_hint: 0.6,0.03
                color: 'yellow'
                background_color: (1,0,0,0.7)
                pos_hint: {"center_x":0.5, "center_y": 0.85}
                on_release: root.deslogar()
        
            Button:
                text: 'Fechar App'
                size_hint: None,None
                size_hint: 0.6,0.03
                color: 'yellow'
                background_color: (1,0,0,0.7)
                pos_hint: {"center_x":0.5, "center_y": 0.7}        
                on_release: exit()

        #Botao RoletaA   
        Button:
            pos: '60','385'
            background_normal:'xchromedriver/app/imagens/roletaA/roletaA.jpg'
            background_down:'xchromedriver/app/imagens/roletaA/roletaA_dawn.jpg'
            size_hint: None, None
            size: 130, 100
        